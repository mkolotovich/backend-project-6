extends ../layouts/application.pug

block header
  h1= t('views.tasks.new.header')

block content
  +formFor()(action=route('tasks') method='post')
    +input(task, 'name', errors, t('views.tasks.name'))(type="text")
    +textarea(task, 'description', errors, t('views.tasks.description'))
    +select(task, taskStatuses, 'statusId', errors, t('views.tasks.status'))
    +select(task, users, 'executorId', errors, t('views.tasks.executor'))
    +select(task, labels, 'labels', errors, t('layouts.application.labels'), true)
    +submit(user)(value=t('views.statuses.new.submit'))
